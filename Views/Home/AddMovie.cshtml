@{
    ViewBag.Title = "Joel Hilton Film Collection";
}
@model NateStapletonMovieApp.Models.Movie

<h1>Add a Movie</h1>

<form asp-action="AddMovie" method="post">
    <div>
        <label asp-for="MovieTitle">Title</label>
        <input asp-for="MovieTitle" />
    </div>
    <div>
        <label asp-for="Catagory">Catagory</label>
        <input asp-for="Catagory" />
    </div>
    <div>
        <label asp-for="Year">Year</label>
        <input asp-for="Year" />
    </div>
    <div>
        <label asp-for="Director">Director</label>
        <input asp-for="Director" />
    </div>
    <div>
        <label asp-for="Rating">Rating</label>
        <select asp-for="Rating">
            <option value="">Select Rating</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>
    <div>
        <p>Edited:</p>
        <label for="True">True</label>
        <input type="radio" id="True" name="Edited" value="True" asp-for="Edited">
        <label for="False">False</label>
        <input type="radio" id="False" name="Edited" value="False" asp-for="Edited">
    </div>
    <div>
        <label asp-for="LentTo">Lent To</label>
        <input asp-for="LentTo" />
    </div>
    <div>
        <label asp-for="Notes">Notes</label>
        <input asp-for="Notes" maxlength="25" />
    </div>
    <button type='submit'>Add Movie</button>
</form>