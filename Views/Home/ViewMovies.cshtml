@{
}

@model IEnumerable<NateStapletonMovieApp.Models.Movie>

<div>
    <h1>Movie List</h1>
    <table>
        <thead>
            <tr>
                <th>Movie Title</th>
                <th>Catagory</th>
                <th>Director</th>
                <th>Rating</th>
                <th>Year</th>
                <th>Edited</th>
                <th>Lent To</th>
                <th>Notes</th>
            </tr>
        </thead>

        <tbody>
            @foreach (NateStapletonMovieApp.Models.Movie x in Model)
            {
                <tr>
                    <th>@x.MovieTitle</th>
                    <th>@x.Catagory</th>
                    <th>@x.Director</th>
                    <th>@x.Rating</th>
                    <th>@x.Year</th>
                    <th>@x.Edited</th>
                    <th>@x.LentTo</th>
                    <th>@x.Notes</th>
                </tr>
            }
        </tbody>
    </table>

</div>